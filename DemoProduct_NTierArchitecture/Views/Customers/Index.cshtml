@using Entites.Concretes
@model List<Customer>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<h1></h1>

<table class="table table-bordered">

    <tr>
        <th>#</th>
        <th>Müşteri Adı</th>
        <th>Şehir</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.City</td>
            <td>
                <a href="/Customers/DeleteCustomer/@item.Id" class="btn btn-outline-danger">Sil</a> 
                <a href="/Customers/UpdateCustomer/@item.Id" class="btn btn-outline-success">Güncelle</a>
            </td>

           
        </tr>
    }



</table>

