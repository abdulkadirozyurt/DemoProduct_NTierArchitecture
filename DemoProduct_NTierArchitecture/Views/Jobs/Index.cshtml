@using Entites.Concretes
@model List<Job>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<h1></h1>
<a href="/Jobs/AddJob" class="btn btn-outline-primary">Meslek Ekle</a>
<br/>
<br/>
<table class="table table-bordered">

    <tr>
        <th>#</th>
        <th>Meslek Adı</th>
        <th>İlgili Personeller</th>
        <th></th>
    </tr>
    
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Title</td>
            <td></td>
            <td>
                
                <a href="/Jobs/DeleteJob/@item.Id" class="btn btn-outline-danger">Sil</a>
                <a href="/Jobs/UpdateJob/@item.Id" class="btn btn-outline-success">Güncelle</a>
                <a href="/Jobs/JobDetails/@item.Id" class="btn btn-outline-primary">Detaylar</a>

            </td>
            
        </tr>
    }


</table>



