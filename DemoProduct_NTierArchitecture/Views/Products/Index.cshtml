@using Entites.Concretes
@model List<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<table class="table table-bordered">

    <tr>

        <th>#</th>
        <th>Ürün Adı</th>
        <th>Fiyat</th>
        <th>Stok</th>
        <th></th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.UnitPrice</td>
            <td>@item.StockAmount</td>
            <td><a href="/ProductsController/DeleteProduct/@item.Id" class="btn btn-outline-danger">Sil</a> <a href="/Products/UpdateProduct/@item.Id" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }

</table>



